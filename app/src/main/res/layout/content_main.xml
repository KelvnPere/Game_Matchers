<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/gameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/foodMatcherBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:textColor="#FFF"
        android:background="@color/colorRed"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="90dp"
        android:text="@string/foodMatcherBtnText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/placeMatcherBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:textColor="#FFF"
        android:background="@color/colorRed"
        android:text="@string/placeMatcherBtnText"
        app:layout_constraintEnd_toEndOf="@+id/foodMatcherBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/foodMatcherBtn"
        app:layout_constraintTop_toBottomOf="@+id/foodMatcherBtn" />

    <Button
        android:id="@+id/shoeMatcherBtn"
        android:layout_width="0dp"
        android:textColor="#FFF"
        android:background="@color/colorRed"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/shoeMatcherBtnText"
        app:layout_constraintEnd_toEndOf="@+id/placeMatcherBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/placeMatcherBtn"
        app:layout_constraintTop_toBottomOf="@+id/placeMatcherBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>